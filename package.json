{
  "name": "@ilteoood/zorro",
  "version": "0.1.0",
  "type": "module",
  "description": "A powerful adapter that enables Zustand stores to connect to Redux DevTools remote server for debugging and state inspection.",
  "scripts": {
    "build": "rozenite build && vite build --config vite.zorro.config.ts",
    "dev": "redux-devtools --hostname=localhost --port=8000 & rozenite dev",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "postinstall": "rozenite build && vite build --config vite.zorro.config.ts"
  },
  "exports": {
    ".": {
      "types": "./dist/zorro.d.ts",
      "import": "./dist/zorro.js",
      "require": "./dist/zorro.umd.cjs"
    },
    "./bundler": "./dist/background.cjs"
  },
  "keywords": [
    "zustand",
    "redux-devtools",
    "remote",
    "react-native",
    "debugging",
    "state-management",
    "devtools"
  ],
  "author": "Matteo Pietro Dazzi",
  "license": "MIT",
  "dependencies": {
    "@rozenite/plugin-bridge": "1.0.0-alpha.3",
    "rn-host-detect": "^1.2.0",
    "socketcluster-client": "^19.2.7",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@redux-devtools/cli": "^4.0.3",
    "@rozenite/vite-plugin": "1.0.0-alpha.3",
    "@types/css-modules": "^1.0.5",
    "@types/node": "^22.18.1",
    "@types/react": "~18.3.24",
    "@types/rn-host-detect": "^1.2.2",
    "@types/socketcluster-client": "^19.1.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "0.76.0",
    "react-native-web": "0.21.0",
    "rozenite": "1.0.0-alpha.3",
    "typescript": "^5.7.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-static-copy": "^3.1.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ilteoood/zorro.git"
  },
  "bugs": {
    "url": "https://github.com/ilteoood/zorro/issues"
  },
  "homepage": "https://github.com/ilteoood/zorro#readme"
}
